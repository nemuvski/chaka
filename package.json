{
  "name": "chaka",
  "version": "3.0.0",
  "author": "K.Utsunomiya",
  "license": "MIT",
  "description": "Creating a React.js or Next.js project template",
  "keywords": [
    "cli",
    "create-project",
    "react.js",
    "next.js"
  ],
  "homepage": "https://chakafire.netlify.app/",
  "repository": {
    "type": "git",
    "url": "https://github.com/nemuvski/chaka.git"
  },
  "bugs": {
    "url": "https://github.com/nemuvski/chaka/issues"
  },
  "files": [
    "/bin",
    "/dist",
    "/npm-shrinkwrap.json",
    "/oclif.manifest.json"
  ],
  "engines": {
    "node": ">=16.0.0"
  },
  "main": "dist/index.js",
  "bin": {
    "chaka": "bin/run"
  },
  "scripts": {
    "format": "prettier --write './**/*.{js,ts}'",
    "lint": "eslint . --ext .ts",
    "typecheck": "tsc --noEmit",
    "test": "mocha --forbid-only \"test/**/*.test.ts\"",
    "build": "rimraf dist && tsc -b",
    "prepack": "npm run build && oclif manifest oclif.manifest.json",
    "postpack": "rimraf oclif.manifest.json"
  },
  "dependencies": {
    "@oclif/core": "^1.14.1",
    "@oclif/plugin-help": "^5.1.12",
    "adm-zip": "^0.5.9",
    "fs-extra": "^10.1.0",
    "node-downloader-helper": "^2.1.3",
    "tmp-promise": "^3.0.3"
  },
  "devDependencies": {
    "@oclif/test": "^2",
    "@types/adm-zip": "^0.5.0",
    "@types/chai": "^4",
    "@types/fs-extra": "^9.0.13",
    "@types/mocha": "^9.1.1",
    "@types/node": "^18.7.6",
    "@types/tmp": "^0.2.3",
    "chai": "^4.3.6",
    "eslint": "^7.32.0",
    "eslint-config-oclif": "^4.0.0",
    "eslint-config-oclif-typescript": "^1.0.2",
    "eslint-config-prettier": "^8.5.0",
    "mocha": "^10.0.0",
    "oclif": "^3.1.2",
    "prettier": "^2.7.1",
    "ts-node": "^10.9.1",
    "typescript": "^4.7.4"
  },
  "oclif": {
    "bin": "chaka",
    "dirname": "chaka",
    "commands": "./dist/commands",
    "plugins": [
      "@oclif/plugin-help"
    ],
    "topicSeparator": " ",
    "topics": {
      "react": {
        "description": "Create a React.js project template"
      },
      "next": {
        "description": "Create a Next.js project template"
      }
    }
  }
}
